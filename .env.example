# Example environment configuration

# Model checkpoint
NG_PT=C:\path\to\ng.pt
# Or provide a directory containing ng.pt:
# PATH_TO_NG=C:\path\to\checkpoint_dir

# Inference server
NG_PORT=5555
NG_CFG=1.0
NG_CTX=1

# Game process
NG_PROCESS=Game.exe
NG_CONTROLLER=km
NG_GAMEPAD_TYPE=xbox
NG_ENV_FPS=60
NG_GAME_SPEED=1.0

# KM adapter tuning (when using gamepad->KM mapping)
NG_KM_MOUSE_SENS=15
NG_KM_DEADZONE=0.2
NG_KM_MOUSE_MAX=50
NG_KM_TRIGGER_THRES=0.1

# KM key/mouse lists
# NG_KM_KEYS=w a s d space shift ctrl alt tab esc enter
# NG_KM_MOUSE_BUTTONS=left right middle x1 x2

# Safety
NG_DISABLE_INPUT=0
NG_STOP_FILE=C:\path\to\repo\STOP
NG_ENABLE_SPEEDHACK=0

# Process picker
NG_PICK_PROCESS=0
NG_PICK_PROCESS_ALL=0
NG_PICK_PROCESS_LIVE=1
NG_PICK_PROCESS_MAX_ROWS=30

# Recording
NG_RECORD_FPS=30
NG_RECORD_MAX_FRAMES=0
NG_RECORD_DURATION=0
NG_RECORD_RAW_MOUSE=1
NG_RECORD_RAW_FOCUS_ONLY=1
NG_IMAGE_WIDTH=2560
NG_IMAGE_HEIGHT=1440

# Debugging / output
NG_DEBUG_PNG_EVERY=1
NG_DEBUG_CRF=32
NG_CLEAN_CRF=28
NG_FFMPEG_PRESET=medium
